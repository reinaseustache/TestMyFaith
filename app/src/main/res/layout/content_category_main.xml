<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CategoryMain"
    tools:showIn="@layout/activity_category_main"
    android:background="#40E0D0">

    <TextView
        android:id="@+id/category_lbl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/titleStr"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:fontFamily="@font/arbutus" />

    <Button
        android:id="@+id/song_lbl"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category_lbl"
        android:layout_marginStart="12dp"
        android:text="@string/songsStr" />

    <Button
        android:id="@+id/movie_lbl"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_lbl"
        android:layout_toEndOf="@+id/song_lbl"
        android:text="@string/moviesStr"/>
</RelativeLayout>